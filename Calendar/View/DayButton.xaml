<UserControl x:Class="Calendar.View.DayButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calendar.View"
             mc:Ignorable="d" 
             d:DesignHeight="10" d:DesignWidth="10"
             Background="LightYellow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="dateLable" HorizontalAlignment="Center" FontFamily="Cascadia Code SemiBold" Margin="5"/>
        <Image x:Name="image" Source="/Images/dots.png" Grid.Row="1" Margin="5"/>
    </Grid>
</UserControl>
