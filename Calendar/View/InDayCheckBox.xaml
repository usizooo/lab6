<UserControl x:Class="Calendar.View.InDayCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calendar.View"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="checkBox" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" Click="checkBox_Click"/>
        <Label x:Name="label" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2" FontFamily="Cascadia Code SemiBold" Margin="5"/>
        <Image x:Name="image" Grid.Column="1" Margin="5"/>
    </Grid>
</UserControl>
